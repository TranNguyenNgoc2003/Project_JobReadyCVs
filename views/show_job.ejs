<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/show_job.css">
    <title>Job Details</title>
</head>
<body>
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Admin CV Page</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/adminHome">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Home</span>
                </a>
            </li>
            <li>
                <a href="/add_job">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text">Add Jobs</span>
                </a>
            </li>
            <li>
                <a href="/list_job">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">List Jobs</span>
                </a>
            </li>
        </ul>
    </section>
    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="profile">
                <img src="/images/admin.png">
            </a>
        </nav>
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Job Details</h1><br>
                    <div class="job-details">
                        <h2><%= job.title %></h2>
                        <p><strong>Company:</strong> <%= job.company %></p>
                        
                        <p><strong>Start Date:</strong> <%= new Date(job.startDate).toLocaleDateString('en-GB') %></p>
                        <p><strong>End Date:</strong> <%= job.endDate ? new Date(job.endDate).toLocaleDateString('en-GB') : 'Present' %></p>
                        <p><strong>Description:</strong> <%= job.description %></p>
                        <p><strong>Responsibilities:</strong></p>
                        <ul>
                            <% job.responsibilities.forEach(responsibility => { %>
                                <li><%= responsibility %></li>
                            <% }) %>
                        </ul>
                        <p><strong>Requirements:</strong></p>
                        <ul>
                            <% job.requirements.forEach(requirement => { %>
                                <li><%= requirement %></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
                <div class="right">
                    <% if (job.companyLogo) { %>
						<img src="<%= job.companyLogo %>" alt="Company Logo" class="company-logo">
					<% } %>
                </div>
            </div>
            <div class="form-actions" style="display: flex; margin-top: 30px;">
                <form action="/edit_job/<%= job._id %>" method="GET">
                    <button type="submit" class="btn btn-primary">Edit Job</button>
                </form>
                <form style="margin-left: 20px;" action="/delete_job/<%= job._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete Job</button>
                </form>
            </div>
        </main>
    </section>
    <script src="/js/admin.js"></script>
</body>
</html>
